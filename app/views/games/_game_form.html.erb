<%= form_for(@game) do |f| %>

  <%= f.label :game_number %>
  <%= f.select :number, options_for_select([1, 2, 3]), {}, {class: 'form-control'} %>

  <%= f.fields_for 'game_teams[]', @game.game_teams.build do |game_team| %>

    <%= f.label "team 1" %>
    <%= game_team.collection_select :team_id, Team.all, :id, :name, {}, {:class=>'form-control'} %>

    <%= f.label :score %>
    <%= game_team.number_field :score, class: 'form-control'%>
  <% end %>

  <%= f.fields_for 'game_teams[]', @game.game_teams.build do |game_team| %>

    <%= f.label "team 2" %>
    <%= game_team.collection_select :team_id, Team.all, :id, :name, {}, {:class=>'form-control'} %>

    <%= f.label :score %>
    <%= game_team.number_field :score, class: 'form-control'%>
  <% end %>

  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
