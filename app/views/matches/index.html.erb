<h1>MATCHES</h1>

<div class="input-group">
<%= form_for(Match.new) do |f| %>
  <%= f.submit "Create Match", class: "btn btn-primary" %>
<% end %>
</div>

<div class="group">
  <% @matches.each do |match| %>
  <h5 class="display-6">Match: <%= match.id %></h1>
  <div class="container">
    <div class="row">
      <div class="col-4">
        1 of 3
      </div>
      <div class="col-4">
        2 of 3
      </div>
      <div class="col-4">
        3 of 3
      </div>
    </div>
  </div>
  <% end %>
</div>
